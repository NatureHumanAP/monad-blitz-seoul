{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "mocha",
            "chai"
        ]
    },
    "include": [
        "./scripts",
        "./test"
    ],
    "exclude": [
        "node_modules",
        "artifacts",
        "cache",
        "typechain-types"
    ]
}